<h1>Editing Label</h1>

<% form_for(@tag) do |f| %>
  <%= f.error_messages %>

  <p>
  <table>
    <tr>
      <td>Name:</td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td>Category:</td>
      <td>
        <% Category.find(:all).each do |c| %>
          <%= 
            check_box("tag", "of_category_#{c.name}") 
          %>
          <%= c.name %><br />
        <% end %>
      </td>
    </tr>
  </table>
  <%= f.submit "Update" %>
<% end %>

<%= link_to 'Back to Tags', categories_path %>
