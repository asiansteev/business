<h1>Listing businesses</h1>

<table id="businesstable">
  <tr>
    <th>Name</th>
    <th>Paid Thru</th>
    <th>Tags</th>
  </tr>
<% for business in @businesses %>
  <tr class="<%= cycle("odd", "even") %>">
    <td><%= business.name %></td>
    <td>
      <%= business.paid_thru_year %>
      <%= link_to '+', :action => 'add_year', :id => business.id %>
    </td>
    <td><%= business.tag_list%></td>
    <td><%= link_to 'Show', business %></td>
  <td><%= link_to 'Edit', edit_business_path(business) %></td>
<td><%= link_to 'Destroy', business, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

