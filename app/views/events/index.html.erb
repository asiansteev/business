<h1>Listing events</h1>

<table id="eventtable">
  <tr>
    <th>Name</th>
    <th>Where</th>
    <th>Description</th>
    <th>Date</th>
    <th>Time</th>
  </tr>
<% for event in @events %>
  <tr class="<%= cycle("odd", "even") %>">
    <td><%= event.name %></td>
    <td><%= event.where %></td>
    <td><%= event.description %></td>
    <td><%= event.date %></td>
    <td><%= event.time %></td>
    <td><%= link_to 'Show', event %></td>
  <td><%= link_to 'Edit', edit_event_path(event) %></td>
<td><%= link_to 'Destroy', event, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

